<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:id="@+id/main"
    tools:context=".TelaInicial">

    <Button
        android:id="@+id/buttonIniciar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="468dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/iniciar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedButton" />

    <Button
        android:id="@+id/buttonConfiguracoes"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/fredoka_one"
        app:shapeAppearanceOverlay="@style/RoundedButton"
        android:text="@string/configura_es"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonIniciar" />

    <ImageView
        android:contentDescription="@string/logo"
        android:id="@+id/imageView2"
        android:layout_width="367dp"
        android:layout_height="306dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonIniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/salmkidslogo" />

</androidx.constraintlayout.widget.ConstraintLayout>
